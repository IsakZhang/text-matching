{
    "train_data_path" : "data/quora_paraphrase/train.tsv",
    "validation_data_path" : "data/quora_paraphrase/dev.tsv",
    
    "dataset_reader" : {
        "type" : "quora_paraphrase",
        "lazy" : false,
        "tokenizer" : {
            "type" : "word",
            "word_splitter" : {
                "type" : "just_spaces"
            }
        },
        "token_indexers" : {
            "tokens" : {
                "type" : "single_id",
                "lowercase_tokens" : true
            }
        }
    },

    "model" : {
        "type" : "baseline",
        "text_field_embedder": {
            "tokens": {
              "type": "embedding",
              "pretrained_file": "/projdata3/info_fil/wxzhang/pretrained_models/glove/glove.42B.300d.txt",
              "embedding_dim": 300,
              "trainable": true
            },
        },
        "sentence_encoder" : {
            "type" : "boe",
            "averaged" : true,
            "embedding_dim" : 300
        },
        "classifier_feedforward": {
            "input_dim": 600,
            "num_layers": 3,
            "hidden_dims": [300, 100, 2],
            "activations": ["relu", "relu", "linear"],
            "dropout": [0.3, 0.2, 0.0]
        },
        "initializer": [
            [".*linear_layers.*weight", {"type": "xavier_normal"}],
            [".*linear_layers.*bias", {"type": "constant", "val": 0}],
            [".*weight_ih.*", {"type": "xavier_normal"}],
            [".*weight_hh.*", {"type": "orthogonal"}],
            [".*bias.*", {"type": "constant", "val": 0}],
            [".*matcher.*match_weights.*", {"type": "kaiming_normal"}]
          ]
    },

    "iterator": {
        "type": "bucket",
        "padding_noise": 0.1,
        "sorting_keys": [["premise", "num_tokens"], ["hypothesis", "num_tokens"]],
        "batch_size": 100
    },
    
    "trainer": {
        "num_epochs": 10,
        "patience": 4,
        "cuda_device": 1,
        "grad_clipping": 5.0,
        "validation_metric": "+accuracy",
        "optimizer": {
          "type": "adam",
          "lr": 0.0005
        }
    }
}